---
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
  { name: 'About', href: '/about' },
  { name: 'Books', href: '/books'},
  { name: 'World Map', href: '/map' },
];
---

<header class="fixed w-full top-0 z-50 bg-white/90 dark:bg-void-900/90 backdrop-blur-sm border-b border-gray-200 dark:border-white/10 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 h-20 md:h-24 flex items-center justify-between">
    <a href="/" class="block hover:opacity-80 transition-opacity shrink-0">
        <img 
            src="/logo-light.png" 
            alt="S.E. Deracy" 
            class="w-auto object-contain block dark:hidden h-[clamp(60px,10vw,90px)]" 
        />
        <img 
            src="/logo-dark.png" 
            alt="S.E. Deracy" 
            class="w-auto object-contain hidden dark:block h-[clamp(60px,10vw,90px)]" 
        /> 
    </a>

    <nav class="hidden md:flex gap-8 items-center">
      {navLinks.map(link => (
        <a 
            href={link.href} 
            class="text-sm font-sans tracking-widest text-gray-900 dark:text-gray-300 hover:text-lilac-dark dark:hover:text-gold uppercase transition-colors"
        >
            {link.name}
        </a>
      ))}
      <div class="border-l border-gray-300 dark:border-gray-700 pl-6 ml-2">
          <ThemeToggle />
      </div>
    </nav>

    <div class="md:hidden flex items-center gap-4">
        <ThemeToggle />
        
        <div class="group relative">
            <button class="text-gray-800 dark:text-white p-2">
                 <span class="sr-only">Menu</span>
                 â˜°
            </button>
            <div class="absolute right-0 top-full mt-2 w-48 bg-white dark:bg-void-900 border border-gray-200 dark:border-void-700 rounded shadow-xl hidden group-hover:block hover:block">
                {navLinks.map(link => (
                    <a href={link.href} class="block px-4 py-3 text-gray-800 dark:text-white hover:bg-gray-100 dark:hover:bg-void-800 border-b border-gray-100 dark:border-void-800 last:border-0">
                        {link.name}
                    </a>
                ))}
            </div>
        </div>
    </div>
  </div>
</header>