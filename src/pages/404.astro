---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: The Void | S.E. Deracy">
    <main class="min-h-screen flex flex-col items-center justify-center text-center px-6 relative overflow-hidden">
        
        <div class="absolute inset-0 bg-void-900">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gold/5 rounded-full blur-3xl animate-pulse"></div>
        </div>

        <div class="relative z-10 max-w-lg">
            <h1 class="text-9xl font-serif text-void-600 font-bold select-none drop-shadow-[0_0_15px_rgba(210,172,34,0.1)]">
                404
            </h1>
            <h2 class="text-3xl text-gold font-serif mb-6">
                You have strayed too far.
            </h2>
            <p class="text-gray-400 mb-8 leading-relaxed">
                The page you seek has been consumed by the Void, or perhaps it never existed in this timeline.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/" class="btn-primary">
                    Return to Safety
                </a>
                <a href="/map" class="btn-secondary">
                    Consult the Map
                </a>
            </div>
        </div>

    </main>
</Layout>