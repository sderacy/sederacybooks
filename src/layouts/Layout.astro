---
import '@fontsource/cinzel';
import '@fontsource/inter';

import '../styles/global.css'; 
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import JsonLd from '../components/JsonLd.astro';
import Analytics from '../components/Analytics.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="The official site of S.E. Deracy" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="The official site of S.E. Deracy and The Elementless Magician." />
        <meta property="og:image" content="https://www.sederacybooks.com/EMCover1.jpg" /> <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content="The official site of S.E. Deracy and The Elementless Magician." />
        <meta property="twitter:image" content="https://www.sederacybooks.com/EMCover1.jpg" />
        <meta name="google-site-verification" content="czRebzHlVhaxI-YKa766q9E07cF7KifVgaUlnROqT0I" />
        <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <JsonLd />
        <Analytics />
        <script is:inline>
            // Not sure if there is a better way to do this in Astro yet
            const theme = (() => {
                if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            })();
            if (theme === 'light') {
                document.documentElement.classList.remove('dark');
            } else {
                document.documentElement.classList.add('dark');
            }
            window.localStorage.setItem('theme', theme);
        </script>
        <script src="../scripts/theme.js"></script>
        <slot name="head" />
        <title>{title}</title>
    </head>
    <body class="bg-grey-100 text-grey-800 dark:bg-void-900 dark:text-white transition-colors duration-300">
        <Navbar />
        
        <div class="flex-grow pt-20">
            <slot />
        </div>

        <Footer />
    </body>
</html>