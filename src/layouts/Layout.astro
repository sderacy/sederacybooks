---
import '@fontsource/cinzel';
import '@fontsource/inter';

import '../styles/global.css'; 
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="The official site of S.E. Deracy" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <script is:inline define:vars={{ accountId: import.meta.env.PUBLIC_MAILERLITE_ID }}>
            (function(w,d,e,u,f,l,n){w[f]=w[f]||function(){(w[f].q=w[f].q||[])
            .push(arguments);},l=d.createElement(e),l.async=1,l.src=u,
            n=d.getElementsByTagName(e)[0],n.parentNode.insertBefore(l,n);})
            (window,document,'script','https://assets.mailerlite.com/js/universal.js','ml');
            ml('account', '2031010');
        </script>
        <title>{title}</title>
    </head>
    <body class="bg-void-800 text-magic-light font-sans antialiased min-h-screen">
        <Navbar />
        
        <div class="flex-grow pt-20">
            <slot />
        </div>

        <Footer />
    </body>
</html>